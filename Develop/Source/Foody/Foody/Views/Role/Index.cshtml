@model IEnumerable<Foody.Models.Role>

@{
    ViewBag.Title = "Index";
}
<h2>
    <span class="glyphicon glyphicon-th-list" aria-hidden="true"></span>Quản lý quyền
    hạn
</h2>
@using (Html.BeginForm())
{
    <table class="table-form">
        <tr>
            <td>
                <label>
                    Vai trò
                </label>
            </td>
            <td>
                @Html.DropDownList("roleId", new SelectList(Foody.Models.Role.GetRoles(), "RoleId", "RoleName"), string.Empty, new { Class = "form-control" })
            </td>
            <td>
                <button class="btn btn-default btn-md" type="submit">
                    <span class="glyphicon glyphicon-search" aria-hidden="true"></span> Tìm
                </button>
            </td>
        </tr>
    </table>
}
<div class="panel panel-default">
    <table class="table">
        <thead>
        <th>
            @Html.DisplayNameFor(model => model.RoleName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastUpdatedDateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastUpdatedBy)
        </th>
        <th></th>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RoleName)
                </td>
                <td>
                    <span>@item.LastUpdatedDateTime.ToString("yyyy/MM/dd HH:mm:ss")</span>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastUpdatedBy)
                </td>
                <td>
                    <a href="~/Role/Edit/@item.RoleId">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true">
                        </span>
                    </a>
                </td>
            </tr>
        }
    </table>
</div>
<p>
    <a href="~/Role/Create">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        Thêm mới
    </a>
</p>
